<div class='login-container'>
  <div class='container'>
    <div class='row'>
      <div class='col-sm-4 col-sm-offset-4'>
        <h1 class='text-center title'>Sign in</h1>

        <%= render partial: 'shared/flash_messages' %>

        <%= form_for(User.new, url: sessions_path, html: {novalidate: 'novalidate', class: 'form validate-form'}) do |f| %>
          <div class="form-group">
            <div class="controls with-icon-over-input">
              <%= f.text_field :email, 'data-rule-required' => true, 'data-rule-email' => true, 'class' => 'form-control', 'Placeholder' => 'E-mail', 'type' => 'email', 'spellcheck' => 'false' %>
              <i class='icon-user text-muted'></i>
            </div>
          </div>

          <div class="form-group">
            <div class="controls with-icon-over-input">
              <%= f.password_field :password, 'data-rule-required' => true, 'class' => 'form-control', 'Placeholder' => 'Password' %>
              <i class='icon-lock text-muted'></i>
            </div>
          </div>

          <%= f.submit "Sign in", class: 'btn btn-block' %>
        <% end %>

        <div class='text-center'>
          <hr class='hr-normal'>
          <a href='<%= new_password_reset_path %>'>Forgot your password?</a>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render 'shared/sign_up_footer' %>
