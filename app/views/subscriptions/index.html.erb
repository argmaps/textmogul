<h1>Listing subscriptions</h1>

<table>
  <thead>
    <tr>
      <th>Stripe</th>
      <th>Plan</th>
      <th>Subscriber</th>
      <th>Last four</th>
      <th>Card type</th>
      <th>Expiration month</th>
      <th>Expiration year</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subscriptions.each do |subscription| %>
      <tr>
        <td><%= subscription.stripe_id %></td>
        <td><%= subscription.plan %></td>
        <td><%= subscription.subscriber %></td>
        <td><%= subscription.last_four %></td>
        <td><%= subscription.card_type %></td>
        <td><%= subscription.expiration_month %></td>
        <td><%= subscription.expiration_year %></td>
        <td><%= link_to 'Show', subscription %></td>
        <td><%= link_to 'Edit', edit_subscription_path(subscription) %></td>
        <td><%= link_to 'Destroy', subscription, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Subscription', new_subscription_path %>
